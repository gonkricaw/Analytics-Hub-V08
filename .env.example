# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/analytics_hub"
DIRECT_URL="postgresql://username:password@localhost:5432/analytics_hub"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="your-email@gmail.com"

# Encryption Configuration
ENCRYPTION_KEY="your-32-character-encryption-key"
ENCRYPTION_IV="your-16-character-iv-key"

# Application Configuration
APP_NAME="Analytics Hub"
APP_URL="http://localhost:3000"

# Security Configuration
MAX_LOGIN_ATTEMPTS="30"
PASSWORD_RESET_EXPIRY="120" # minutes
PASSWORD_RESET_COOLDOWN="30" # seconds

# File Upload Configuration
MAX_FILE_SIZE="2097152" # 2MB in bytes
UPLOAD_DIR="./public/uploads"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds
RATE_LIMIT_MAX="100" # max requests per window

# Development Configuration
NODE_ENV="development"